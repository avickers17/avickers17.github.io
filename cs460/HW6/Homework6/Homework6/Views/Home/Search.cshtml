@model IEnumerable<Homework6.Models.Person>
@{
    /**/

    ViewBag.Title = "Search";
}
<div class="container-fluid">
    <img src="@Url.Content("~/Content/Images/Logo.png")" />
</div>
<h3 class="form-title" id="searchEngine" style="text-align:center">Client Search</h3>
<hr />
<form action="search" method="get">
    <div class="row">
        <div class="col-sm-8">
            @Html.EditorFor(model => model.FirstOrDefault().FullName, new { htmlAttributes = new { @class = "form-control", placeholder = "Search by Client Name" } })
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
</form>
<br />
<h4>@ViewBag.message</h4>
@foreach (var item in Model)
{
    <tr>
        <td>
            <a class="btn btn-default" href="@Url.Action("Employee", "Home", new { id=item.PersonID })">@Html.DisplayFor(modelItem => item.FullName)</a>
        </td>
    </tr>
}


